# Dify A2A Gateway 환경변수 설정

# Dify API 연결
DIFY_API_URL=http://localhost:5001
DIFY_API_KEY=app-your-api-key-here

# Gateway 설정
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=INFO

# CORS 설정
CORS_ORIGINS=["*"]

# Redis 설정 (Session 관리 - 다중 클라이언트 지원)
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379/0  # redis_url 사용 시 위 설정 무시
REDIS_TTL_DAYS=1  # conversation 매핑 보관 기간 (일 단위)
